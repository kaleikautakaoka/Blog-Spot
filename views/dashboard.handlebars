
// Danshboard handlebars to display the dashboard page

{{#if posts.length}}

<section>
    <h1>Dashboard</h1>
    <p>Logged in as {{user.username}}</p>
    <p><a href="/logout">Logout</a></p>
    <hr>
    <h2>Posts</h2>
    {{#each posts as |post|}}
    <h3>{{post.title}}</h3>
    <p>{{post.comment}}</p>
    <p>By {{post.user.username}}</p>
    <p>Created on {{post.date_created}}</p>
    <hr>
    {{/each}}
    <hr>
    <h2>Comments</h2>
    {{#each comments as |comment|}}
    <p>{{post.comment}}</p>
    <p>By {{comment.user.username}}</p>
    <p>Created on {{comment.date_created}}</p>
    <hr>
</section>

    {{/else}}
    <section>
    <p>No posts yet</p>
    </section>
    {{/if}}
<button type="submit"><a href="/dashboard/new"></a></button>